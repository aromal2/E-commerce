// function for send OTP
function phoneAuth() {
  var phone = document.getElementById('number').value;
    var number = "+91"+document.getElementById('number').value;
    console.log(number)
    console.log(phone);
    axios({
      url:'/send-otp',
      method: 'post',
      data:{
        phoneno : phone
      },
    })
      .then((response) =>{
        console.log(response);
        if(response.data){

          firebase.auth().signInWithPhoneNumber(number, window.recaptchaVerifier).then(function (confirmationResult) {
            console.log("this is confirmation result------", confirmationResult)
            window.confirmationResult = confirmationResult;
            coderesult = confirmationResult;
            document.getElementById('sender').style.display = 'none';
            document.getElementById('verifier').style.display = 'block';
            console.log('OTP Sent');

            var time_limit = 60;

              var time_out = setInterval(() => {

                if(time_limit == 0) {
                 $('#timer').html('<p class="text-primary"> Resend OTP</p>')
                  
                  
                } else {
                  if(time_limit < 10) {
                    time_limit = 0 + '' + time_limit;
                  }
                  $('#timer').html('00:' + time_limit);
                  time_limit -= 1;
                }

              }, 1000);

          }).catch(function (error) {
            // error in sending OTP
            alert(error.message);
          });

        }else{
          document.getElementById('senderErr').innerHTML = "This Number is not registered yet!"
          //alert("user not found");
        }
      })
}

