<section class="mt-50 mb-50">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="mb-25">
            <h4>Edit address</h4>
          </div>

        
          <form id="form" >
            <div class="row">
                <div class="form-group col-md-6">
                    <label>First Name <span class="required"></span></label>
                    <input required="" class="form-control square" name="fname" type="text" value="<%=address[0].address.fname%>">
                </div>
                <div class="form-group col-md-6">
                    <label>Last Name <span class="required">*</span></label>
                    <input required="" class="form-control square" name="lname" value="<%=address[0].address.lname%>">
                </div>
               
                <div class="form-group col-md-12">
                    <label>Email <span class="required">*</span></label>
                    <input required="" class="form-control square" name="email" type="email" value="<%=address[0].address.email%>">
                </div>
                <div class="form-group col-md-12">
                    <label>Mobile no<span class="required">*</span></label>
                    <input required="" class="form-control square" name="mobile" type="mobileno" value="<%=address[0].address.mobile%>">
                </div>
                <div class="form-group col-md-12">
                    <label>Street<span class="required">*</span></label>
                    <input required="" class="form-control square" name="street" type="street" value="<%=address[0].address.street%>">
                </div>
                <div class="form-group col-md-12">
                    <label>Apartment<span class="required">*</span></label>
                    <input required="" class="form-control square" name="apartment" type="apartment" value="<%=address[0].address.apartment%>">
                </div>
                <div class="form-group col-md-12">
                    <label>City<span class="required">*</span></label>
                    <input required="" class="form-control square" name="city" type="mobileno" value="<%=address[0].address.city%>">
                </div>
                <div class="form-group col-md-12">
                    <label>State<span class="required">*</span></label>
                    <input required="" class="form-control square" name="state" type="state" value="<%=address[0].address.state%>">
                </div>
                <div class="form-group col-md-12">
                    <label>Pincode<span class="required">*</span></label>
                    <input required="" class="form-control square" name="pincode" type="pincode" value="<%=address[0].address.pincode%>"> 
                </div>
                <div class="form-group col-md-12">
                  <input required="" class="form-control square" name="addressId" type="pincode" value="<%=address[0].address._id%>" style="display: none;"> 
              </div>
              
              
              
                <div class="col-md-12">
                    <a href="/accountPage" button type="submit" class="btn btn-fill-out submit"  onclick="addressFunc('<%=address[0].address._id%>')" name="submit" >Save</button></a>
                </div>
            </div>
        </form>

        </div>
    
      </div>
     
    </div>
  </section>

  <script>

    function addressFunc(editAddressid)
    {
      $.ajax({
        url:"/editAddress",
        data:
        {
          editAddressid:editAddressid
        },
        method:"POST",
        data:$('#form').serialize()


      })
    }
  </script>

