<div class="container">
    <section class="content-main mt-80 mb-100">
      <div class="card mx-auto card-login">
        <div class="card-body">
          <h4 class="card-title mb-4">Admin Login</h4>
          <p id="error" class="text-danger"></p>
          <form action="post" class="p-10 ">
            <div class="mb-3">
              <input class="form-control" name="email" id="email" placeholder="Email" type="text">
              <p id="error1" class="text-danger"></p>
            </div>
            <div class="mb-3">
              <input class="form-control" name="password" id="password" placeholder="Password" type="password">
              <p id="error1" class="text-danger"></p>
            </div> 
            <div class="mb-3">
              
              <label class="form-check">
                <input type="checkbox" class="form-check-input" checked="">
                <span class="form-check-label">Remember</span>
              </label>
            </div>
            <div class="mb-4">
              <button type="button" onclick="validate()" class="btn btn-primary w-100"> Login </button>
            </div> <!-- form-group// -->
          </form>
        </div>
      </div>
    </section>
  </div>

  <script>


function validate()
{
    let email= document.getElementById('email')
    let password = document.getElementById('password')

    let emailValue=email.value.trim()
    let passwordValue=password.value.trim()

    let error1=email.parentElement.querySelector('p')
    let error2=password.parentElement.querySelector('p')

    error1.innerText = ''
    error2.innerText = ''
      
    let flag=1
    if(emailValue=='')
    {
        error1.innerText='Field is Required0'
        flag = 2
    }
    if(passwordValue=='')
    {
        error2.innerText='field is required'
        flag = 2
    }

    if(flag==1)
    {
        submit (emailValue,passwordValue)
    }

}

function submit(email,password){
  $.ajax({
    url : "/admin/login",
    method : "post",
    data : {
      email : email,
      password : password
    },
success(loginAction){
  if(loginAction){
    location.href = '/admin/dashboard'
  }else{
    location.reload = '/admin/login'
    document.getElementById('error').innerText = " email or password is wrong"
  }
}
    
  })
}
</script>