<section class="">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Edit Category</h2>
          <form  id="form">
            <label for="">Category Name</label>
            <input type="text" name="Categoryname" class="form-control" value="<%=editCategory.CategoryName%>"/>
            <label for="">SubCategory </label>
            <input type="text" name="Subcategoryname" class="form-control" value="<%=editCategory.subCategory%>"/>
            <!-- <label for="">Add an offer</label>
            <input type="text" name="editCategoryoffer" class="form-control" value="0"/> -->
