<section class="">
  <div class="container d-flex justify-content-center">
    <div class="row w-75 mt-5">
      <div class="col-md-12">
        <h2 class="text-center">Edit Banner</h2>
        <form
          name="editBannerForm"
          action="/admin/editBanner?editbanner=<%=response[0]._id%>"
          method="POST"
          enctype="multipart/form-data"
          onsubmit="return validateForm()"
        >
          <label for="title">Title</label>
          <input
            type="text"
            name="title"
            id="title"
            class="form-control"
            value="<%=response[0].title%>"
          />
          <label for="description">Description</label>
          <input
            type="text"
            name="description"
            id="description"
            class="form-control"
            value="<%=response[0].description%>"
          />
          <!-- <label for="link">Link</label>
          <input
            type="text"
            name="link"
            id="link"
            class="form-control"
            value="<%=response[0].link%>"
          /> -->
          <label for="image1">Image</label>
          <img
            src="/productImages/<%=response[0]?.image%>"
            alt=""
            style="width: 100px; height: auto"
          />
          <input type="file" name="image1" id="image1" class="form-control" />
          <button type="submit" class="btn btn-info text-white mt-4">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  body {
    font-family: Arial, sans-serif;
  }

  h1 {
    text-align: center;
  }

  form {
    max-width: 500px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  label {
    display: block;
    margin-bottom: 5px;
  }
</style>

<script>
  function validateForm() {
    var title = document.forms["editBannerForm"]["title"].value;
    var description = document.forms["editBannerForm"]["description"].value;
    // var link = document.forms["editBannerForm"]["link"].value;
    var image = document.forms["editBannerForm"]["image1"].value;

    if (title.trim() === "") {
      alert("Please enter a title.");
      return false;
    }

    if (description.trim() === "") {
      alert("Please enter a description.");
      return false;
    }

    // if (link.trim() === "") {
    //   alert("Please enter a link.");
    //   return false;
    // }

    if (image.trim() === "") {
      alert("Please select an image.");
      return false;
    }

    return true;
  }
</script>
