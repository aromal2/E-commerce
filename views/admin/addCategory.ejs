
    <div class="screen-overlay"></div>
    
    <main class="main-wrap mx-auto">
       
        <section class="content-main">
            <div class="content-header">
                <div ms-5>
                    <h2 class="content-title card-title ms-1">Categories </h2>
                    <p class="ms-1`">Add, edit or delete a category</p>
                </div>
                <div>
                    <input type="text" placeholder="Search Categories" class="form-control bg-white">
                </div>
            </div>
            <div class="card ms-1">
                <div class="card-body ms-6">
                    <div class="row">
                        <div class="col-md-3">
                            <form method="post" action="/admin/category" >
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Category</label>
                                    <input type="text" placeholder="Type here" class="form-control" name="category"/>
                                </div>
                                <div class="mb-4">
                                    <label for="product_slug" class="form-label">Sub-Category</label>
                                    <input type="text" placeholder="Type here" class="form-control"  name="sub-category"/>
                                </div>
                                <!-- <div class="mb-4">
                                    <label class="form-label">Parent</label>
                                    <select class="form-select">
                                        <option>Clothes</option>
                                        <option>T-Shirts</option>
                                    </select>
                                </div> -->
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea placeholder="Type here" class="form-control" name="description" ></textarea>
                                </div>
                                <div class="d-grid">
                                   <button  type="submit"  class="btn btn-primary">Create category</button> 
                                </div>
                            </form>


                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-center">
                                                
                                            </th>
                                            <th>Index</th>
                                            <th>ID</th>
                                            <th>Category</th>
                                            <th>Sub-category</th>
                                            
                                            <!-- <th>Order</th> -->
                                            <th class="text-end">Action</th>

                                        </tr>

                                        <%  Categories.forEach(function(category,index)
                                        { %>
                                          <tr>
                                            <td></td>
                                         <td><%=index+1 %></td> 
                                          <td><%=category._id %></td>
                                         <td><%= category.CategoryName %> </td> 
                                         <td><%= category.subCategory %></td>
                                         <td>
                                            <a href="/admin/editCategory/<%=category._id %>"><button class="btn btn-info btn-sm">edit</button></a>
                                            </td>

                                         </tr>
                                         <% }
                                        )
                                        %>
                                             

                                    </thead>
                                    <tbody>
                                       
                                     
                                       
                                       
                                      
                                       
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
       